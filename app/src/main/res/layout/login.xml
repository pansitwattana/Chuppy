<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/o"
    android:background="#ff525252"
    android:clickable="false"
    android:weightSum="1"
    android:gravity="center_vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHU"
            android:id="@+id/textView12"
            android:textSize="35dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#fffb8209"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PPY"
            android:id="@+id/textView13"
            android:textSize="35dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THE NEW WAY TO BE SMART"
        android:id="@+id/gfh"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="#fffdfdfe">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_person_white_24dp"
            android:background="#ff474747"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_input"
            android:hint="ID"
            android:maxLength="254"
            android:background="#fffdfdfe"
            android:textColor="#ff303030"
            android:textColorHint="#ff303030"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:layout_marginTop="10dp"
        android:background="#fffdfdfe">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView4"
            android:src="@drawable/ic_lock_white_24dp"
            android:background="#ff474747"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="0"
            android:id="@+id/password_input"
            android:hint="PASSWORD"
            android:layout_above="@+id/loginButton"
            android:layout_row="0"
            android:layout_column="3"
            android:background="#fffdfdfe"
            android:textColorHint="#ff303030"
            android:textColor="#ff303030"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/enterlogin_btn"
        android:layout_above="@+id/createidButton"
        android:layout_alignEnd="@+id/createidButton"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_weight="0.03"
        android:background="#fffd8409"
        android:textColor="#ffffffff"
        android:layout_marginTop="10dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORGOT PASSWORD ?"
        android:id="@+id/forgetpass_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_row="1"
        android:layout_column="4"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="forget_pass_clicked"
        android:textColor="#fffdfdfe" />

</LinearLayout>
